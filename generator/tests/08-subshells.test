					}
					if stream, err := streamManager.Get(`2`); err != nil {
						shell.HandleError(err)
					} else {
						command.Stderr = stream
					}
					if err := command.Start(); err != nil {
						shell.HandleError(err)
						return
					}
         			pipelineWaitgroup = append(pipelineWaitgroup, func() error{
        			     defer streamManager.Destroy()
        			     return command.Wait()
         			})

				}()
				func() {
